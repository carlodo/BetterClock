<resources>
    <style name="WidgetFount">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Theme.BackgroundTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progressBarStyleSmall" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_interminate</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_bg</item>
    </style>
    <style name="WidgetBackgroundTransparent">
        <item name="android:background">@drawable/bg_transparent</item>
    </style>
    <style name="Text" />
    <style name="Text.Time" parent="@style/Text">
        <item name="android:textSize">60.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.APM" parent="@style/Text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.Date" parent="@style/Text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.TimeLand" parent="@style/Text">
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.APMLand" parent="@style/Text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text.DateLand" parent="@style/Text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>